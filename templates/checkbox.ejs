.checkbox {
	@apply block relative cursor-pointer select-none p-sm;
}

.checkbox input {
	@apply opacity-0 cursor-pointer h-0 w-0 hidden;
}

.checkmark {
	@apply absolute top-0 left-0 w-[25px] h-[25px] bg-secondary rounded-full border-primary;
}

.checkbox .checkmark::after {
	content: '';
	@apply hidden left-[38%] top-[25%] w-[23%] h-[40%] border-white absolute
	border-r-thick border-b-thick rotate-45;
}

.checkbox input:checked + .checkmark {
	@apply bg-accent;
}

.checkbox input:checked + .checkmark::after {
	@apply block;
}
