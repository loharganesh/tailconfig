/* Text Inputs */
.input {
	@apply flex items-center outline-none border-primary rounded-primary bg-secondary duration-150 text-title

    /* Size */
    px-rg py-xs
	
    /* Hover */
	hover:bg-secondary/50 

	/* Focus */
    focus:bg-primary focus:border-accent;
}

/* Text Area */
.textarea {
	@apply resize-none;
}
